#!/usr/bin/env ruby

# this will require rfeed.rb in a clever way
require "../rfeed"
require "pp"

SUB_COMMANDS = %w/feed post add new/

opts = Trollop::options do
	version "rfeed #{Rfeed.version}"
	banner <<-EOS
Totally awesome feed engine.

Usage:
	rf [ options ]

where [ options ] are:
EOS

	stop_on SUB_COMMANDS
end

cmd = ARGV.shift
cmd_opts = case cmd
	when /^feeds?$/
		if ARGV[0] == "new" and ARGV[1]
			Rfeed.feed_new ARGV[1]
		end
	when "post"
	when "add"
	when "new"
		if ARGV[0] == "feed" and ARGV[1]
			Rfeed.feed_new ARGV
		end
end


